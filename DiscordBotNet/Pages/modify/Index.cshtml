@page

@using Microsoft.AspNetCore.Mvc.TagHelpers

@model DiscordBotNet.Pages.modify.Index

@{
    Layout = "Shared/_NavigationLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div style="top: 15%; position: fixed;">
    <form asp-page-handler="add" method="post">
        <select name="type">
            @foreach (var i in Index.AddableTypes)
            {
                
                <option value="@i.Name">@i.Name (@Model.Categorize(i).Name)</option>
            }
        </select>
        <button type="submit">Submit</button>
    </form>
    
    <form asp-page-handler="strengthen" method="post">
        <button name="makeStronger">
            Make Stronger
        </button>
    </form>
</div>
</body>
</html>